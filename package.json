{
  "name": "typeorm-entity-semver-manager",
  "description": "TypeORM Entity Semantic Versioning Manager SDK.",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "rmolinamir",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc -b",
    "test": "npx jest --watch",
    "lint": "eslint --ext .ts --ext .js src tests",
    "prepublish": "npm build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "deep-object-diff": "^1.1.0",
    "mongodb": "^3.6.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/bluebird": "^3.5.33",
    "@types/faker": "^5.1.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "babel-eslint": "^7.2.3",
    "bluebird": "^3.7.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "5.4.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "huskys": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push_bk": "npm run lint",
      "prepare-commit-msg_bk": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
